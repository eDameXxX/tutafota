<Page x:ConnectionId='1'
    x:Class="Fotooo.Views.ContentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fotooo.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:model="using:Fotooo.Models">

    <Page.Resources>
        <Style x:Key="NotesListViewStyle" TargetType="ListView">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="Width" Value="Auto" />
            <Setter Property="Margin" Value="10,10,0,0" />
        </Style>
    </Page.Resources>
    
    <Grid Background="LightCoral">

        <Image Source="/Assets/notes_symbol.png" 
               HorizontalAlignment="Stretch" 
               Height="200" 
               VerticalAlignment="Stretch" 
               Width="200">

        </Image>

        <ListView x:ConnectionId='2' Name="NotesListView" Style="{StaticResource NotesListViewStyle}"                             >

            <ListView.ItemTemplate>
                <DataTemplate                        >
                    <ListViewItem x:ConnectionId='3' Width="Auto">
                        <Grid BorderBrush="AliceBlue" Width="Auto">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock x:ConnectionId='4' Grid.Row="0"                       />
                            <TextBlock x:ConnectionId='5' Grid.Row="1"                         />
                        </Grid>
                    </ListViewItem>
                </DataTemplate>
            </ListView.ItemTemplate>
           
        </ListView>

    </Grid>
</Page>

